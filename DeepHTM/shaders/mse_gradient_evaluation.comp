#version 430

layout(binding = 0) buffer Targets
{
	float targets[];
};

layout(binding = 1) buffer Outputs
{
	float outputs[];
};

layout(binding = 2) buffer Gradients
{
	float gradients[];
};

layout(local_size_x = 1) in;

void main()
{
	const uint globalOutput = gl_WorkGroupID.x + gl_WorkGroupID.y * gl_NumWorkGroups.x;
	gradients[globalOutput] = outputs[globalOutput] - targets[globalOutput];
}